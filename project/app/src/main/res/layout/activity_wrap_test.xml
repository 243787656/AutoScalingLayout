<me.dreamheart.autoscalinglayout.ASLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    custom:designWidth="768px"
    custom:designHeight="1150px"
    custom:autoScaleEnable="true"
    android:background="#fff"
    android:orientation="horizontal">

    <TextView android:text="view1" android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#f00"
        android:layout_height="match_parent" />

    <TextView android:text="view2"
        android:background="#0f0"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <me.dreamheart.autoscalinglayout.ASRelativeLayout
        android:background="#00f"
        android:layout_weight="1"
        android:layout_width="match_parent"
        custom:designWidth="256px"
        custom:designHeight="256px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textSize="48px"
            />

    </me.dreamheart.autoscalinglayout.ASRelativeLayout>

</me.dreamheart.autoscalinglayout.ASLinearLayout>
