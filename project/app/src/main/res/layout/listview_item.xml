<me.dreamheart.autoscalinglayout.ASRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    custom:designWidth="768px"
    custom:designHeight="300px"
    custom:autoScaleEnable="true"
    custom:autoScaleType="fitWidth"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title_text_view"
        android:text="ListView test"
        android:textSize="30px"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialogue_text_view"
        android:layout_below="@+id/title_text_view"
        android:text="ListView test"
        android:textSize="25px"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</me.dreamheart.autoscalinglayout.ASRelativeLayout>
